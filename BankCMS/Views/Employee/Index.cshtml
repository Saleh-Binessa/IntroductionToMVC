@{
    Layout = "_Layout"; // Assuming you have a layout file you want to use
}

@model IEnumerable<BankCMS_.Models.Employee>

<h1>Employees List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
            <th>More Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Department</td>
                <td>
                    <a href="@Url.Action("EmployeeDetails", "Employee", new { id = employee.EmployeeId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
